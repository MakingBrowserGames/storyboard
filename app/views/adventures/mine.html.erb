<div class="Container">
  <h1 class="PageBanner">My Adventures</h1>

  <div class="AdventureList">
    <% if @adventures.size <= 0 %>
      <p>You have no adventures. Live a little!</p>
    <% end %>

    <% @adventures.each do |adventure| %>
      <div class="card">
        <%= link_to adventure do %>
          <div class="card-image">
            <iframe src="<%= adventure_path(adventure) %>"></iframe>
          </div>
          <div class="card-title">
            <%= adventure %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
