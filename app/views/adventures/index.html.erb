<div class="StoryIndex">
  <div class="StoryIndexBanner">
    <h1 class="PowerBanner">Adventure <br>Time</h1>


    <p class="StoryIndexIntro">
      Build your story just the way you want it.

      <%= link_to "Create a Story â†’", new_adventure_path, class: "StoryIndexIntroAction" %>
    </p>
  </div>

  <section class="StoryIndexFeatured">
    <h2 class="SectionHeader">Featured Stories</h2>

    <div class="AdventureList">
      <% @featured_adventures.each do |adventure| %>
        <div class="card">
          <%= link_to adventure do %>
            <div class="card-image">
              <iframe src="<%= adventure_path(adventure) %>"></iframe>
            </div>
            <div class="card-title">
              <%= adventure %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </section>
</div>
