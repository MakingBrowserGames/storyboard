<h2 class="SectionHeader">Featured Stories: <%= feature_group %></h2>

<div class="AdventureList">
  <% Adventure.where(featured: feature_group).each do |adventure| %>
    <div class="card">
      <%= link_to adventure do %>
        <div class="card-image">
          <iframe src="<%= adventure_path(adventure) %>?iframe=1"></iframe>
        </div>
        <div class="card-title">
          <%= adventure %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
